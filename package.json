    "employee",
    "onboarding",
    "attendance",
    "hr",
    "react",
    "node"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "link-preview-js": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "preview": "^0.1.3",
    "xlsx": "^0.18.5"
  }
}
